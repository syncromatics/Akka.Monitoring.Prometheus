<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Syncromatics Engineering</Authors>
    <Company>Syncromatics Corporation</Company>
    <Description>Akka.net monitoring adapter for Prometheus</Description>
    <Copyright>2017 Syncromatics Corporation</Copyright>
    <PackageLicense>https://github.com/syncromatics/Akka.Monitoring.Prometheus/blob/master/LICENSE</PackageLicense>
    <PackageProjectUrl>https://github.com/syncromatics/Akka.Monitoring.Prometheus</PackageProjectUrl>
    <RepositoryUrl>https://github.com/syncromatics/Akka.Monitoring.Prometheus</RepositoryUrl>
    <PackageTags>akka.net,Prometheus,monitoring,akka.monitoring</PackageTags>
    <Version>0.0.0-develop</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Akka.Monitoring" Version="1.1.0" />
    <PackageReference Include="DestructureExtensions" Version="2.1.0" />
    <PackageReference Include="prometheus-net" Version="8.0.1" />
  </ItemGroup>

</Project>
